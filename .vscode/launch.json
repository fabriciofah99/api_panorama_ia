{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Debug",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8080",
                "--reload"
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal"
        },
        {
            "name": "LamaCleaner",
            "type": "python",
            "request": "launch",
            "module": "lama_cleaner",
            "cwd": "${workspaceFolder}/lama-cleaner-env/lama-cleaner",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/lama-cleaner-env/Scripts", // For√ßa uso da venv
                "PATH": "${workspaceFolder}/lama-cleaner-env/Scripts;${env:PATH}"
            },
            "args": [
                "--model",
                "lama",
                "--port",
                "8081",
                "--device",
                "cpu"
            ],
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Start API + Lama",
            "configurations": [
                "FastAPI Debug",
                "LamaCleaner"
            ]
        }
    ]
}